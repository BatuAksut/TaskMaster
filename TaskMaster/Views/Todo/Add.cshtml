@model EntityLayer.TodoItem
@{
    ViewData["Title"] = "Add Todo Item";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TodoName" class="control-label">Name</label> <!-- Başlık güncellendi -->
        <input asp-for="TodoName" class="form-control" />
        <span asp-validation-for="TodoName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TodoDescription" class="control-label">Description</label> <!-- Başlık güncellendi -->
        <textarea asp-for="TodoDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="TodoDescription" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsCompleted" /> Completed <!-- Başlık güncellendi -->
        </label>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label> <!-- Başlık güncellendi -->
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(ViewBag.Categories != null ? new SelectList(ViewBag.Categories, "CategoryId", "CategoryName") : null)">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}